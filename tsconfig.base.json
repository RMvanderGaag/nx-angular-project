{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@concert-project/concert": ["libs/concert/src/index.ts"],
      "@concert-project/shared": ["libs/shared/src/index.ts"],
      "@concert-project/user": ["libs/user/src/index.ts"],
      "os": ["./node_modules/os-browserify/browser"],
      "stream": ["./node_modules/stream-browserify"],
      "util": ["./node_modules/util/util.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
